{% extends '@quick_coding.view/layout/static.html.twig' %}

{% block title %}{{ quick_coding.app_name }} | Log in{% endblock %}

{% block body %}
<div class="content-background">
    <div class="uk-section-large">
        <div class="uk-container uk-container-large">
            <div uk-grid>
                <div class="uk-width-1-6@s uk-width-1-5@m uk-width-1-4@l uk-width-1-3@xl"></div>
                <div class="uk-width-2-3@s uk-width-3-5@m uk-width-1-2@l uk-width-1-3@xl">
                
                    <div class="uk-card uk-card-default login-container">
                        <div class="uk-card-header">
                            Login Page
                        </div>
                        <div class="uk-card-body">
                            <center>
                                <img id="avatar" width="100" src="{{ asset(quick_coding.app_logo ? quick_coding.app_logo : quick_coding.public ~ 'images/logo.png') }}">
                            </center>
                            <br>
                            <form method="post">
                            
                            	{% if error %}
                                    <div class="uk-alert-danger" uk-alert>
                                        <a class="uk-alert-close" uk-close></a>
                                        <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                                    </div>
                                {% endif %}
                            
                                {% if app.user %}
                                	<div class="success" uk-alert>
                                        <a class="uk-alert-close" uk-close></a>
                                        <p>You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</p>
                                    </div>
                                {% endif %}
    
                                <fieldset class="uk-fieldset">

                                    <div class="uk-margin">
                                    	<div class="uk-position-relative">
                                    		<span class="uk-form-icon" uk-icon="icon: user"></span>
                                            <input type="email" value="{{ last_username }}" name="Email" class="uk-input" placeholder=" Email" required>
                                        </div>
                                    </div>

                                    <div class="uk-margin">
                                        <div class="uk-position-relative">
                                            <span class="uk-form-icon" uk-icon="icon: lock"></span>
                                            <input type="password" name="Password" class="uk-input" placeholder="Password" required>
                                        </div>
                                    </div>
                                    
                                    <div class="uk-position-relative">
                                    	<label><input type="checkbox" name="_remember_me" class="uk-checkbox"> Remember Me</label>
                                    </div>
                                    
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
									
									<hr />
									
                                    <div class="uk-align-right">
                                        <button type="submit" class="uk-button uk-button-primary">
                                            <span uk-icon="icon: sign-in"></span> Login
                                        </button>
                                    </div>
                                    
                                </fieldset>
                            </form>
                        </div>
                    </div>
                    
                </div>
               <div class="uk-width-1-6@s uk-width-1-5@m uk-width-1-4@l uk-width-1-3@xl"></div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
